<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/left_fragment_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/left_fragment_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/left_fragment_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/left_fragment_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/left_fragment_start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asd"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/left_fragment_end_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bcd"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

